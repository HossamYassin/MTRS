@model MTRS.Core.DTOs.UserDto

@{
    ViewData["Title"] = "Edit Employee";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Admin</a></li>
                    <li class="breadcrumb-item"> <a href="/admin/employees">Employees</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Edit Employee</h3>
            </div>
            <form method="post">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>First Name</label>
                                <div class="input-group">
                                    <input type="text" readonly asp-for="FirstName" class="form-control" data-mask>
                                </div>
                                <div class="row" style="margin-left: 3px;">
                                    <span asp-validation-for="FirstName" style="color:red;"></span>
                                </div>
                            </div>
                            <!-- /.form-group -->
                            <div class="form-group">
                                <label>Department<span style="color:red;">*</span></label>
                                <div class="input-group">
                                    @Html.DropDownListFor(m => m.DepartmentId, new SelectList(ViewBag.Departments, "Id", "Name"), "-- Select --", new { @class = "form-control select2bs4" })
                                </div>
                                <div class="row" style="margin-left: 3px;">
                                    <span asp-validation-for="DepartmentId" style="color:red;"></span>
                                </div>
                            </div>
                            <!-- /.form-group -->
                        </div>
                        <!-- /.col -->
                        <div class="col-md-6">
                            <!-- /.form-group -->
                            <div class="form-group">
                                <label>Last Name</label>
                                <div class="input-group">
                                    <input type="text" readonly asp-for="LastName" class="form-control" data-mask>
                                </div>
                                <div class="row" style="margin-left: 3px;">
                                    <span asp-validation-for="LastName" style="color:red;"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Role<span style="color:red;">*</span></label>
                                <div class="input-group">
                                    @Html.DropDownListFor(m => m.PositionId, new SelectList(ViewBag.Positions, "Id", "Name"), "-- Select --", new { @class = "form-control select2bs4" })
                                </div>
                                <div class="row" style="margin-left: 3px;">
                                    <span asp-validation-for="PositionId" style="color:red;"></span>
                                </div>
                            </div>
                            <!-- /.form-group -->
                        </div>
                        <div class="col-md-6">
                            <!-- /.form-group -->
                            <div class="form-group">
                                <label>Email</label>
                                <div class="input-group">
                                    <input type="text" readonly asp-for="Email" class="form-control" data-mask>
                                </div>
                                <div class="row" style="margin-left: 3px;">
                                    <span asp-validation-for="Email" style="color:red;"></span>
                                </div>
                            </div>
                            <!-- /.form-group -->
                            <div class="form-group">
                                <label>Grade<span style="color:red;">*</span></label>
                                <div class="input-group">
                                    @Html.DropDownListFor(m => m.GradeId, new SelectList(ViewBag.Grades, "Id", "Name"), "-- Select --", new { @class = "form-control select2bs4" })
                                </div>
                                <div class="row" style="margin-left: 3px;">
                                    <span asp-validation-for="GradeId" style="color:red;"></span>
                                </div>
                            </div>
                            <!-- /.form-group -->
                        </div>
                        <div class="col-md-6">
                            <!-- /.form-group -->
                            <div class="form-group">
                                <label>Manager<span style="color:red;">*</span></label>
                                <div class="input-group">
                                    @Html.DropDownListFor(m => m.ManagerId, new SelectList(ViewBag.Managers, "Id", "FirstName"), "-- Select --", new { @id = "ddlManagers", @class = "form-control select2bs4" })
                                </div>
                                <div class="row" style="margin-left: 3px;">
                                    <span asp-validation-for="ManagerId" style="color:red;"></span>
                                </div>
                            </div>

                            <!-- /.form-group -->
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Permissions</label>
                                <br /> <br />
                                <div class="input-group">
                                    <label>Is Admin</label>@Html.CheckBoxFor(x => x.IsAdmin, new { @class = "checkboxPer" })
                                </div>
                                <div class="input-group">
                                    <label>Is Direct Manager</label>@Html.CheckBoxFor(x => x.IsManager, new { @class = "checkboxPer" })
                                </div>
                                <div class="input-group">
                                    <label>Is Project Manager</label>@Html.CheckBoxFor(x => x.IsProjectManager, new { @class = "checkboxPer" })
                                </div>
                                <div class="input-group">
                                    <label>Is Super Manager</label>@Html.CheckBoxFor(x => x.IsSuperManager, new { @class = "checkboxPer" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="input-group">
                                    <label>Is Active</label> @Html.CheckBoxFor(x => x.IsActive, new { @class = "checkboxPer" })
                                </div>
                                <div class="input-group">
                                    <label>Timesheet Enabled </label> @Html.CheckBoxFor(x => x.AllowTimeSheet, new { @class = "checkboxPer" })
                                </div>
                            </div>
                            <!-- /.form-group -->
                        </div>
                    </div>
                    <!-- /.row -->
                    <div class="row">
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block" style="width:80px;margin-top:20px;">Save</button>
                        </div>
                        <!-- /.col -->
                    </div>

                    <!-- /.row -->
                </div>
            </form>
        </div>
    </div>
</section>


<!-- Select2 -->
<link rel="stylesheet" href="~/plugins/select2/css/select2.min.css">
<link rel="stylesheet" href="~/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
<!-- Bootstrap4 Duallistbox -->

<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap -->
<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

<script src="~/plugins/select2/js/select2.full.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#ddlManagers").select2({
            allowClear: true
        });
    });
</script>

<style>
    .select2-selection.select2-selection--single {
        height: 38px !important;
    }
</style>
<style>
    .checkboxPer {
        width: 20px;
        height: 20px;
        padding-left: 10px;
        margin-left: 20px;
        margin-top: 4px;
    }
</style>